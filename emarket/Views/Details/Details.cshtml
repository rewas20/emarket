@model emarket.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    emarket.Models.Product product = ViewBag.Product;
}
<head>
    <style>

        img, h1 {
            display: block;
            margin-left: auto;
            margin-right: auto;
            text-align: center;
        }

        h4 {
            color: grey;
            font-size: 22px;
        }

        #Details {
            border: 1px solid;
            padding: 5px;
        }

        .button {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 16px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
        }

        .button1 {
            background-color: white;
            color: black;
            border: 2px solid #4CAF50;
        }

            .button1:hover {
                background-color: #4CAF50;
                color: white;
            }
    </style>
</head>
<body>

    <h2>Details</h2>
    <hr />
   
    <div class="row" id="Details">

        <h1>@product.name</h1>
        <hr />
        <img src="~/Uploads/@product.image" style="width: 50% ;height: 25%" ; />
        <hr />

        <h3>Price: @product.price L.E</h3>
        <h4>Description:</h4>
      
        <p>@product.description</p>

    </div>
    <div>
        <a href="~/Details/Delete/@product.id" target="_parent"><button class="button button1">Delete </button></a>
        <a href="~/Details/Update/@product.id" target="_parent"><button class="button button1" id="update">Update </button></a>

    </div>
</body>